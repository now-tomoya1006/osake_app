<div class="container">
<div class="row">
  <div class="col-md-8 col-md-offset-2">

<h2>Editing Sake</h2>

<%= form_for @sake do |f| %>

<% if @sake.errors.any? %>
  <%= @sake.errors.count %>errors
  <ul>
  <% @sake.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
  </ul>
<% end %>


<div class="form-group">
      <%= f.label :title %><br>
      <%= f.text_field :title, autofocus: true ,class: "form-control sake_title"%>
    </div>

    <div class="form-group">
      <%= f.label :Reviews %><br />
      <%= f.text_area :body, autofocus: true ,class: "form-control sake_body"%>
    </div>



    <div class="actions">
    <%= f.submit "Update Sake", class: "btn btn-primary" %>
    </div>
<% end %>
 <%= link_to "Show",sake_path(@sake) %>
 <%= link_to "Back",sakes_path %>

</div>
</div>
</div>